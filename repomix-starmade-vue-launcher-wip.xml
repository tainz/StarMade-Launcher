<script setup lang="ts">
import { ref, computed, onMounted, onUnmounted } from 'vue'
import { useRoute, useRouter } from 'vue-router/composables'
import { injection } from '@/util/inject'
import { useService } from '@/composables'
import { kUserContext } from '@/composables/user'
import { UserServiceKey } from '@xmcl/runtime-api'
import {
  UserIcon,
  ChevronDownIcon,
  MinimizeIcon,
  MaximizeIcon,
  CloseIcon,
  CogIcon,
  UserPlusIcon,
  ArrowRightOnRectangleIcon,
  CheckCircleIcon
} from '@/components/starmade/icons'

const route = useRoute()
const router = useRouter()

// Use existing xmcl user context injection
const { users, userProfile } = injection(kUserContext)!

// Use existing xmcl user service
const {
  switchUserProfile,
  removeUserProfile,
  refreshUser,
  refreshSkin
} = useService(UserServiceKey)

// Dropdown state
const isDropdownOpen = ref(false)
const dropdownRef = ref<HTMLElement | null>(null)

// Computed properties
const accounts = computed(() => users.value || [])
const activeAccount = computed(() => userProfile.value)
const userLoading = ref(false)

// Helper to get display name from xmcl UserProfile
const getDisplayName = (account: any): string => {
  if (!account) return ''

  // xmcl structure: account has selectedProfile and profiles map
  if (account.profiles && account.selectedProfile) {
    const profile = account.profiles[account.selectedProfile]
    return profile?.name || account.username || 'Unknown'
  }

  // Fallback
  return account.username || account.name || 'Unknown'
}

// Click outside handler
const handleClickOutside = (event: MouseEvent) => {
  if (dropdownRef.value && !dropdownRef.value.contains(event.target as Node)) {
    isDropdownOpen.value = false
  }
}

onMounted(() => {
  document.addEventListener('mousedown', handleClickOutside)
})

onUnmounted(() => {
  document.removeEventListener('mousedown', handleClickOutside)
})

// Window controls - use xmcl's existing Electron API
const windowControls = {
  minimize: () => {
    // xmcl likely exposes window controls via a service or global
    if ((window as any).controller) {
      (window as any).controller.minimize()
    } else if ((window as any).ipcRenderer) {
      (window as any).ipcRenderer.send('minimize')
    }
  },
  maximize: () => {
    if ((window as any).controller) {
      (window as any).controller.maximize()
    } else if ((window as any).ipcRenderer) {
      (window as any).ipcRenderer.send('maximize')
    }
  },
  close: () => {
    if ((window as any).controller) {
      (window as any).controller.close()
    } else if ((window as any).ipcRenderer) {
      (window as any).ipcRenderer.send('close')
    }
  }
}

// Navigation items - FIXED: Added leading slashes
const navItems = [
  { name: 'Play', path: '/play' },
  { name: 'Installations', path: '/installations' },
  { name: 'News', path: '/news' }
]

const isNavActive = (path: string) => route.path === path

const navigateToSettings = () => {
  router.push({ path: '/settings', query: { section: 'accounts' } })
  isDropdownOpen.value = false
}

const handleAccountSwitch = async (account: any) => {
  userLoading.value = true
  try {
    // xmcl's switchUserProfile expects userId and profileId
    await switchUserProfile({
      userId: account.id,
      profileId: account.selectedProfile
    })
  } finally {
    userLoading.value = false
    isDropdownOpen.value = false
  }
}

const handleLogin = async () => {
  userLoading.value = true
  try {
    // Trigger Microsoft login via xmcl service
    // You may need to use a dialog composable: useDialog(LoginDialog)
    const { show } = useDialog('login') // Or appropriate dialog key
    await show({ service: 'microsoft' })
  } finally {
    userLoading.value = false
    isDropdownOpen.value = false
  }
}

const handleLogout = async () => {
  if (!activeAccount.value) return

  userLoading.value = true
  try {
    // xmcl's removeUserProfile to logout
    await removeUserProfile(activeAccount.value.id)
  } finally {
    userLoading.value = false
    isDropdownOpen.value = false
  }
}
</script>

<template>
  <header
    class="relative z-30 flex justify-between items-center px-6 py-3 bg-black/20 backdrop-blur-sm border-b border-white/5"
    style="-webkit-app-region: drag"
  >
    <!-- Left: User Profile + Settings -->
    <div class="flex-1 flex justify-start" style="-webkit-app-region: no-drag">
      <div class="flex items-center gap-3">
        <!-- User Profile Dropdown -->
        <div v-if="!activeAccount" class="flex items-center gap-3">
          <button
            @click="handleLogin"
            :disabled="userLoading"
            class="flex items-center gap-2 px-4 py-2 rounded-md bg-starmade-accent hover:bg-starmade-accent-hover transition-colors text-sm font-bold uppercase tracking-wider disabled:opacity-50"
          >
            <UserPlusIcon class="w-5 h-5" />
            <span>{{ userLoading ? 'Logging in...' : 'Add Account' }}</span>
          </button>
        </div>

        <div v-else class="relative" ref="dropdownRef">
          <!-- Trigger -->
          <div
            @click="isDropdownOpen = !isDropdownOpen"
            class="flex items-center gap-3 cursor-pointer group"
          >
            <div
              class="w-10 h-10 bg-slate-800/50 rounded-full flex items-center justify-center group-hover:bg-slate-700/70 transition-colors border border-slate-700"
            >
              <UserIcon class="w-6 h-6 text-slate-400" />
            </div>
            <div>
              <h3 class="font-semibold text-white">{{ getDisplayName(activeAccount) }}</h3>
            </div>
            <ChevronDownIcon
              class="w-4 h-4 text-gray-400 group-hover:text-white transition-all"
              :class="{ 'rotate-180': isDropdownOpen }"
            />
          </div>

          <!-- Dropdown Menu -->
          <div
            v-if="isDropdownOpen"
            class="absolute top-full mt-2 w-72 bg-slate-900/90 backdrop-blur-sm border border-slate-700 rounded-md shadow-lg overflow-hidden z-20"
          >
            <!-- Accounts List -->
            <div class="p-2">
              <p class="px-2 py-1 text-xs font-semibold text-gray-400 uppercase tracking-wider">
                ACCOUNTS
              </p>
              <ul>
                <li v-for="account in accounts" :key="account.id">
                  <button
                    @click="handleAccountSwitch(account)"
                    class="w-full flex items-center gap-3 px-2 py-2 text-left rounded-md hover:bg-slate-700/50 transition-colors"
                  >
                    <div
                      class="w-8 h-8 bg-slate-800 rounded-full flex items-center justify-center border border-slate-600"
                    >
                      <UserIcon class="w-5 h-5 text-slate-400" />
                    </div>
                    <span class="text-sm text-white flex-1">{{ getDisplayName(account) }}</span>
                    <CheckCircleIcon
                      v-if="activeAccount.id === account.id"
                      class="w-5 h-5 text-starmade-accent"
                    />
                  </button>
                </li>
              </ul>
            </div>

            <hr class="border-slate-700/50" />

            <!-- Actions -->
            <div class="p-2">
              <ul>
                <li>
                  <button
                    @click="navigateToSettings"
                    class="w-full flex items-center gap-3 px-2 py-2 text-left rounded-md hover:bg-slate-700/50 transition-colors text-sm text-gray-300 hover:text-white"
                  >
                    <CogIcon class="w-5 h-5" />
                    <span>Manage Accounts</span>
                  </button>
                </li>
                <li>
                  <button
                    @click="handleLogin"
                    :disabled="userLoading"
                    class="w-full flex items-center gap-3 px-2 py-2 text-left rounded-md hover:bg-slate-700/50 transition-colors text-sm text-gray-300 hover:text-white disabled:opacity-50"
                  >
                    <UserPlusIcon class="w-5 h-5" />
                    <span>{{ userLoading ? 'Logging in...' : 'Add Account' }}</span>
                  </button>
                </li>
                <li>
                  <button
                    @click="handleLogout"
                    :disabled="userLoading"
                    class="w-full flex items-center gap-3 px-2 py-2 text-left rounded-md hover:bg-slate-700/50 transition-colors text-sm text-gray-300 hover:text-white disabled:opacity-50"
                  >
                    <ArrowRightOnRectangleIcon class="w-5 h-5" />
                    <span>{{ userLoading ? 'Logging out...' : 'Log Out' }}</span>
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Settings Button -->
        <button
          @click="() => router.push('/settings')"
          class="p-2 rounded-full hover:bg-white/10 transition-colors"
          aria-label="Settings"
        >
          <CogIcon class="w-6 h-6 text-gray-400 hover:text-white transition-colors" />
        </button>
      </div>
    </div>

    <!-- Center: Navigation -->
    <div class="flex-1 flex justify-center" style="-webkit-app-region: no-drag">
      <nav class="flex items-center gap-10">
        <button
          v-for="item in navItems"
          :key="item.path"
          @click="() => router.push(item.path)"
          class="font-display uppercase tracking-widest transition-colors duration-200 relative pb-2"
          :class="
            isNavActive(item.path)
              ? 'text-white'
              : 'text-gray-500 hover:text-gray-300'
          "
        >
          {{ item.name }}
          <div
            v-if="isNavActive(item.path)"
            class="absolute bottom-0 left-0 w-full h-1 bg-starmade-accent rounded-full shadow-[0_0_8px_0px_#227b86]"
          ></div>
        </button>
      </nav>
    </div>

    <!-- Right: Window Controls -->
    <div class="flex-1 flex justify-end" style="-webkit-app-region: no-drag">
      <div class="flex items-center gap-2">
        <button
          @click="windowControls.minimize"
          class="p-2 rounded-md hover:bg-white/5 transition-colors"
        >
          <MinimizeIcon class="w-5 h-5 text-gray-400" />
